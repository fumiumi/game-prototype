{
  "name": "game-prototype",
  "build": {
      "dockerfile": "dockerfile"
  },
  "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.vscode-typescript-tslint-plugin"
      ]
    }
  },
  "postCreateCommand": "cmake -B build -S . && cmake --build build",
  "remoteUser": "vscode"
}