{
  "version": 3,
  "cmakeMinimumRequired": {
      "major": 3,
      "minor": 15,
      "patch": 0
  },
  "configurePresets": [
      {
          "name": "ninja-gcc",
          "description": "Use Ninja with GCC",
          "generator": "Ninja",
          "binaryDir": "build",
          "cacheVariables": {
              "CMAKE_C_COMPILER": "gcc",
              "CMAKE_CXX_COMPILER": "g++",
              "CMAKE_BUILD_TYPE": "Debug"
          }
      }
  ]
}
